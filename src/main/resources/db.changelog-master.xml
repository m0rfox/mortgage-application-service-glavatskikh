<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="Schema" author="GlavatskikhVN">
        <createTable tableName="customer">
            <column name="id" type="varchar">
                <constraints primaryKey="true"/>
            </column>
            <column name="FIRSTNAME" type="varchar"/>
            <column name="SECOND_NAME" type="varchar"/>
            <column name="PATRONYMIC" type="varchar"/>
            <column name="PASSPORT_NUMBER" type="varchar"/>
            <column name="BIRTHDATE" type="varchar"/>
            <column name="SEX" type="varchar"/>
            <column name="SALARY" type="number"/>
            <column name="MORTGAGE_AMOUNT" type="number"/>
            <column name="MORTGAGE_PERIOD" type="int"/>
            <column name="STATUS" type="varchar"/>
            <column name="MONTHLY_PAYMENT" type="number"/>
        </createTable>
    </changeSet>
</databaseChangeLog>